{
  "extends": "@repo/config-typescript/base.json",
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "module": "preserve",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@repo/database/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}