{
  "extends": "@repo/config-typescript/base.json",
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "bundler",
    "lib": ["es2021", "dom"],
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@repo/database/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}