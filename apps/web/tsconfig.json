{
  "extends": "@repo/config-typescript/nextjs.json",
  "compilerOptions": {
    "types": [
      "@serwist/next/typings"
    ],
    "lib": [
      "webworker"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@repo/types/*": [
        "../../packages/types/src/*"
      ],
      "@repo/database/*": [
        "../../packages/database/src/*"
      ],
      "@repo/helpers/*": [
        "../../packages/helpers/src/*"
      ],
      "@repo/constants/*": [
        "../../packages/constants/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.js", "../../packages/ui/src/components/icons-data.ts",
  ],
  "exclude": [
    "node_modules",
    "public/sw.js"
  ]
}